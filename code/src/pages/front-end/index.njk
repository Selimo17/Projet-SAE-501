{% extends "layouts/front-end/base.njk" %}
{% set bubble_color = "rose" %}

{% block main %}
    <h1 class="text-3xl font-bold mb-4">Articles sur le BUT MMI</h1>
    <section class="flex justify-between flex-col-reverse lg:flex-row sm:gap-x-10 gap-y-6">


        <ul>
            {% for article in list_articles.data %}
                <li class="w-full mb-6 shadow hover:shadow-xl lg:max-w-[750px]">
                    <a class="block" href="{{ '/articles/' ~ article._id }}">
                        <figure>
                            <img class="w-full" src="{{'uploads/' ~ article.image }}" alt="{{ article.title }}">
                        </figure>
                        <section class="p-8 pb-14">
                            <p class="text-2xl font-bold">{{ article.title }}</p>
                            <p>{{ article.content }}</p>
                        </section>
                    </a>
                </li>
            {% endfor %}
        </ul>
        
        <a class="jpo-banniere flex-1 basis-80" href="https://www.cyu.fr/formation/construire-son-projet/salons-journee-portes-ouvertes" title="Ouverture dans un nouvel onglet">
            <figure class="logo">
                <img src="/images/logo-cyu-blanc.png" width="200" alt="">
            </figure>

            <section class="textes">
                <p class="text-2xl">Journée portes ouvertes</p>
                <p class="text-4xl mb-3">
                    12/02/2023,
                    <br>
                    de 10h à 17h
                </p>
                <p class="en-savoir-plus">EN SAVOIR PLUS</p>
            </section>
        </a>
    </section>


{% endblock %}
